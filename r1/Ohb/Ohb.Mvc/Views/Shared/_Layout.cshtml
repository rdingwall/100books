<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="stylesheet/less" href="@Url.Content("~/content/less/bootstrap.less")"  />

    <script type="text/html" id="tmplBookSearchResult">
        <div class="row">
        <div class="span2">
            <img src="{{ smallThumbnailUrl }}" alt="{{ title }}" />
        </div>
        <div class="span14">
            <h3>{{ title }}</h3>
            <p>{{ authors }}</p>
        </div>
    </div>
    </script>

    <script src="http://cdnjs.cloudflare.com/ajax/libs/less.js/1.1.3/less-1.1.3.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/modernizr/1.7/modernizr-1.7.min.js" type="text/javascript"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/underscore.js/1.1.4/underscore-min.js" type="text/javascript"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/backbone.js/0.3.3/backbone-min.js" type="text/javascript"></script>
    <script src="https://raw.github.com/andyet/ICanHaz.js/master/ICanHaz.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ohb.js")" type="text/javascript"></script>
    <style type="text/css">
        body { padding-top: 60px; }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="fill">
            <div class="container">
                <span class="brand">100 Books</span>
                @Html.Partial("_LoggedInMenuPartial")
            </div>
        </div>
    </div>
    <div class="container">
      @RenderBody()
    </div>
    <!-- /container -->
</body>
</html>
